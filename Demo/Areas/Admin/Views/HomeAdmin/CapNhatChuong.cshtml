@model Demo.Models.Chuong

@{
    ViewBag.Title = "ThemMoiChuong";
    Layout = "~/Areas/Admin/Views/Shared/layoutadmin.cshtml";
    Demo.Models.TestEntities1 db = new Demo.Models.TestEntities1();
}

<div class="custom-container">
    <h2>Sửa thông tin chương</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)
        <div class="custom-form-group">
            <label for="ma">Tên chương</label>
            @Html.EditorFor(model => model.ma, new { htmlAttributes = new { @class = "form-control", id = "ma" } })
            @Html.ValidationMessageFor(model => model.ma, "", new { @class = "text-danger" })
        </div>

        <div class="custom-form-group">
            <label for="noiDung">Nội dung</label>
            @Html.TextAreaFor(model => model.noiDung, new { htmlAttributes = new { @class = "form-control", id = "noiDung" } })
            @Html.ValidationMessageFor(model => model.noiDung, "", new { @class = "text-danger" })
        </div>

        <div class="custom-form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    }
</div>
